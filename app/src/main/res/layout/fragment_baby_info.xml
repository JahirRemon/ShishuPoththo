<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.mdjahirulislam.shishupoththo.Fragment.BabyInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_left_margin"
                    android:layout_marginRight="@dimen/activity_right_margin"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:src="@drawable/ic_baby"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/edit_text_bg_shape"
                        >

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="45dp"
                            android:background="@drawable/icon_bg_shape"
                            android:padding="8dp"
                            android:src="@drawable/profile"/>

                        <EditText
                            android:id="@+id/nameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="Enter Child Name"
                            android:inputType="text"
                            android:paddingLeft="12dp"

                            android:textColor="@color/colorTitleColor"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_bg_shape"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/calenderIcon"
                            android:layout_width="46dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_bg_shape"
                            android:padding="8dp"
                            android:src="@drawable/ic_calendar"/>

                        <TextView
                            android:id="@+id/calenderText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="center|left"
                            android:hint="Birth Date"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="12dp"
                            android:textColor="@color/colorTitleColor"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="————————————— OR ——————————————"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/ageYearTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg_shape"
                            android:gravity="center"
                            android:hint="Year"
                            android:inputType="number"
                            android:textColor="@color/colorTitleColor"
                            android:textSize="18sp"/>

                        <EditText
                            android:id="@+id/ageMonthTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="14dp"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg_shape"
                            android:gravity="center"
                            android:hint="Month"
                            android:inputType="number"
                            android:textColor="@color/colorTitleColor"
                            android:textSize="18sp"/>

                        <EditText
                            android:id="@+id/ageDayTV"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_bg_shape"
                            android:gravity="center"
                            android:hint="Day"
                            android:inputType="number"
                            android:textColor="@color/colorTitleColor"
                            android:textSize="18sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/edit_text_bg_shape"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_bg_shape"
                            android:padding="8dp"
                            android:src="@drawable/weight"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="center"
                            android:hint="kg"
                            android:inputType="number"
                            android:textColor="@color/colorTitleColor"
                            android:textSize="18sp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorBgBorder"/>

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="center"
                            android:hint="gm"
                            android:inputType="number"
                            android:textColor="@color/colorTitleColor"
                            android:textSize="18sp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/edit_text_bg_shape"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/baby_femaleLL"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/icon_bg_shape"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/girl"/>

                            <TextView
                                android:id="@+id/info_female"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@android:color/transparent"
                                android:gravity="center|left"
                                android:inputType="textEmailAddress"
                                android:text="Female"
                                android:textColor="@color/colorTitleColor"
                                android:textSize="18sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/baby_maleLL"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:transitionGroup="true">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:padding="8dp"
                                android:src="@drawable/man"/>

                            <TextView
                                android:id="@+id/info_male"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:backgroundTint="@android:color/transparent"
                                android:gravity="center|left"
                                android:inputType="textEmailAddress"
                                android:text="Male"
                                android:textColor="@color/colorTitleColor"
                                android:textSize="18sp"/>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@drawable/button_bg_sgape"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/colorTitleColor"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>
